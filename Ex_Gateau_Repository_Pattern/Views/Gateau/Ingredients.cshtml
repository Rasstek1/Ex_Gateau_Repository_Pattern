@model Gateau
@using Ex_Gateau_Repository_Pattern.Models

@{
    ViewData["Title"] = "Ingrédients";
}

<div class="row">
    <div class="col-md-4 ing">
        <div class="border p-4">
            <img src="@Url.Content("~/img/" + Model.UrlImage)" class="img-fluid" alt="Image du gâteau">
        </div>
    </div>
    <div class="col-md-8">
        <h2>@Model.Nom</h2>

        <h3>Ingrédients :</h3>
        @foreach (var ingredients in Model.Ingredients)
        {
            <p>@ingredients.Nom</p>
        }
    </div>
</div>
